; Test div (signed division) with a range of values
; Store the result of rs1 / rs2 to rd

.extern write_int

.const meta.exit_ok, 0x0001
.const stdio.init, 0x0100
.const stdio.put_byte, 0x0102

.bss
    ; Reserve memory needed by write_int
    write_int.target: .resw 1

.text
.entry
    ; Initialize
    ecalli Z, Z, stdio.init
    la S, write_int.target
    li B, ' '
    ; 0 (division by zero produces zero)
    li X, 0
    li Y, 0
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 0 (division by zero produces zero)
    li X, 0x7fffffff
    li Y, 0
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 0 (division by zero produces zero)
    li X, 0x80000000
    li Y, 0
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 0
    li X, 1
    li Y, 2
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 0
    li X, -5
    li Y, 20
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 1
    li X, +400
    li Y, +400
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 1
    li X, -400
    li Y, -400
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -1
    li X, +400
    li Y, -400
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -1
    li X, -400
    li Y, +400
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 3
    li X, 9
    li Y, 3
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 5
    li X, 10
    li Y, 2
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 16
    li X, 256
    li Y, 16
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 256
    li X, 65536
    li Y, 256
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -12
    li X, +144
    li Y, -12
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 5000000
    li X, +5000000
    li Y, +1
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -5000000
    li X, -5000000
    li Y, +1
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -5000000
    li X, +5000000
    li Y, -1
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 5000000
    li X, -5000000
    li Y, -1
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 32767
    li X, 2147483647
    li Y, 65536
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -32768
    li X, -2147483648
    li Y, 65536
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; 2147483647
    li X, 2147483647
    li Y, 1
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -2147483648
    li X, -2147483648
    li Y, 1
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -2147483647
    li X, 2147483647
    li Y, -1
    div A, X, Y
    call R, write_int ecalli Z, B, stdio.put_byte
    ; -2147483648 (overflows)
    li X, -2147483648
    li Y, -1
    div A, X, Y
    call R, write_int
    ; All done
    ecalli Z, Z, meta.exit_ok
