; Test xorwi (bitwise XOR word immediate) with a range of values
; Store the result of rs1 ^ immediate to rd

.extern write_hex

.const meta.exit_ok, 0x0001
.const stdio.init, 0x3000
.const stdio.put_byte, 0x3002

.text
.entry
    ; Initialize
    ecalli Z, Z, stdio.init
    li B, ' '
    ; 0
    li X, 0x00000000
    xorwi A, X, 0x00000000
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; 0
    li X, 0x00000001
    xorwi A, X, 0x00000001
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; ffff
    li X, 0x00000000
    xorwi A, X, 0xffff
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; ffffffff
    li X, 0x00000000
    xorwi A, X, 0xffffffff
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; ffffffff
    li X, 0xffffffff
    xorwi A, X, 0x0000
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; ffff0000
    li X, 0xffffffff
    xorwi A, X, 0xffff
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; 0
    li X, 0xffffffff
    xorwi A, X, 0xffffffff
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; 8421c33c
    li X, 0x8421c33c
    xorwi A, X, 0x0000
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; 84213cc3
    li X, 0x8421c33c
    xorwi A, X, 0xffff
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; 7bde3cc3
    li X, 0x8421c33c
    xorwi A, X, 0xffffffff
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; 8421433c
    li X, 0x8421c33c
    xorwi A, X, 0x8000
    call R, write_hex ecalli Z, B, stdio.put_byte
    ; 8421ccc3
    li X, 0x8421c33c
    xorwi A, X, 0x0fff
    call R, write_hex
    ; All done
    ecalli Z, Z, meta.exit_ok
