; Test slt (Set if less than signed)
; Store 1 to rd if rs1 < rs2, otherwise store 0 to rd

.const meta.exit_ok, 0x0001
.const stdio.init, 0x3000
.const stdio.put_byte, 0x3002

.text
.entry
    ; Initialize
    ecalli Z, Z, stdio.init
    ; Positive < Positive (1)
    li X, 99
    li Y, 100
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Positive !< Positive (0)
    li X, 60
    li Y, 15
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Positive == Positive (0)
    li X, 3_500
    li Y, 3_500
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative < Negative (1)
    li X, -90
    li Y, -10
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative !< Negative (0)
    li X, -75
    li Y, -80
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative == Negative (0)
    li X, -1
    li Y, -1
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative < Positive (1)
    li X, -50
    li Y, +50
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Positive !< Negative (0)
    li X, +25
    li Y, -16
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; All done
    ecalli Z, Z, meta.exit_ok
