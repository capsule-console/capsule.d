; Test slt (Set less than signed)
; Store 1 to rd if rs1 < rs2, otherwise store 2 to rd

.const meta.exit_ok, 0x0001
.const stdio.init, 0x3000
.const stdio.put_byte, 0x3002

.text
.entry
    ; Initialize
    ecalli Z, Z, stdio.init
    ; Positive < Positive (1)
    addi X, Z, 99
    addi Y, Z, 100
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Positive !< Positive (0)
    addi X, Z, 60
    addi Y, Z, 15
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Positive == Positive (0)
    addi X, Z, 3_500
    addi Y, Z, 3_500
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative < Negative (1)
    addi X, Z, -90
    addi Y, Z, -10
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative !< Negative (0)
    addi X, Z, -75
    addi Y, Z, -80
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative == Negative (0)
    addi X, Z, -1
    addi Y, Z, -1
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Negative < Positive (1)
    addi X, Z, -50
    addi Y, Z, +50
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; Positive !< Negative (0)
    addi X, Z, +25
    addi Y, Z, -16
    slt X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; All done
    ecalli Z, Z, meta.exit_ok
