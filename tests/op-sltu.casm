; Test sltu (Set if less than unsigned)
; Store 1 to rd if rs1 < rs2, otherwise store 0 to rd

.const meta.exit_ok, 0x0001
.const stdio.init, 0x3000
.const stdio.put_byte, 0x3002

.text
.entry
    ; Initialize
    ecalli Z, Z, stdio.init
    ; 1
    li X, 0
    li Y, 1
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; 1
    li X, 0
    li Y, 0xffffffff
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; 1
    li X, 1234
    li Y, 5678
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; 0
    li X, 1
    li Y, 0
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; 0
    li X, 0xffffffff
    li Y, 0
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; 0
    li X, 6000
    li Y, 1200
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; 0
    li X, 512
    li Y, 512
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; 0
    li X, 0x80000000
    li Y, 0x80000000
    sltu X, X, Y
    addi X, X, '0'
    ecalli Z, X, stdio.put_byte
    ; All done
    ecalli Z, Z, meta.exit_ok
